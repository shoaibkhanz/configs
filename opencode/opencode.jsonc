{
  "$schema": "https://opencode.ai/config.json",

  // Privacy: Disable sharing sessions
  "share": "disabled",

  // Custom instructions: Load project-specific guidelines
  "instructions": ["CONTRIBUTING.md", "README.md"],

  // Keybinds: Vim-style navigation for scrolling chat
  "keybinds": {
    "messages_page_down": "ctrl+d,pagedown",
    "messages_page_up": "ctrl+u,pageup",
    "messages_half_page_down": "ctrl+alt+d",
    "messages_half_page_up": "ctrl+alt+u",
    "messages_first": "home",
    "messages_last": "end"
  },

  // Terminal UI: Enhanced scrolling experience
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  },

  // Disabled providers: Prevent using opencode provider
  // "disabled_providers": ["opencode"]
}
