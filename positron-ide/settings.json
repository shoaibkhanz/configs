{
    "editor.minimap.enabled": false,
    "githubPullRequests.pullBranch": "never",
    "editor.fontFamily": "Fira Code",
    "editor.fontSize": 12,
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.scrollbar.horizontalScrollbarSize": 0,
    "terminal.integrated.fontFamily": "monospace",
    "workbench.colorTheme": "Catppuccin Mocha",
    "github.copilot.editor.enableAutoCompletions": true,
    "interactiveWindow.executeWithShiftEnter": true,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "editor.formatOnSave": true,
    "workbench.activityBar.location": "hidden",
    "editor.lineNumbers": "relative",
    "editor.accessibilityPageSize": 12,
    "window.zoomLevel": 1,
    "terminal.integrated.fontSize": 12,
    //vim bindings for vscode-neoovim extension.
    "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim/init.lua",
    "vscode-neovim.compositeKeys": {
        "nn": {
            "command": "vscode-neovim.escape",
        },
    },
    //vim bindings for vim extension
    "vim.useSystemClipboard": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.leader": "<Space>",
    "vim.hlsearch": true,
    "vim.handleKeys": {
        "N": true
    },
    "vim.normalModeKeyBindingsNonRecursive": [
        // NAVIGATION
        // switch b/w buffers
        {
            "before": [
                "<S-h>"
            ],
            "commands": [
                ":bprevious"
            ]
        },
        {
            "before": [
                "<S-l>"
            ],
            "commands": [
                ":bnext"
            ]
        },
        // splits
        {
            "before": [
                "leader",
                "v"
            ],
            "commands": [
                ":vsplit"
            ]
        },
        {
            "before": [
                "leader",
                "s"
            ],
            "commands": [
                ":split"
            ]
        },
        // panes
        {
            "before": [
                "<C-h>"
            ],
            "commands": [
                "workbench.action.focusLeftGroup"
            ]
        },
        {
            "before": [
                "<C-j>"
            ],
            "commands": [
                "workbench.action.focusBelowGroup"
            ]
        },
        {
            "before": [
                "<C-k>"
            ],
            "commands": [
                "workbench.action.focusAboveGroup"
            ]
        },
        {
            "before": [
                "<C-l>"
            ],
            "commands": [
                "workbench.action.focusRightGroup"
            ]
        },
        // Extra Options
        {
            "before": [
                "leader",
                "f"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "leader",
                "x",
            ],
            "commands": [
                "workbench.actions.view.problems"
            ]
        },
        // {
        //     "before": [
        //         "<leader>",
        //         "t"
        //     ],
        //     "commands": [
        //         "python.execSelectionInConsole"
        //     ]
        // },
    ],
    //other settings
    "github.copilot.advanced": {},
    "github.copilot.enable": {
        "*": false,
        "markdown": true,
        "plaintext": true
    },
    "editor.codeActionsOnSave": {},
    "breadcrumbs.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": false,
    "remote.SSH.configFile": "/Users/shoaib/.ssh/config",
    "remote.SSH.defaultExtensions": [
        "anyscalecompute.anyscale-workspaces",
        "ms-python.python",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter"
    ],
    "workbench.startupEditor": "none",
    "workbench.sideBar.location": "right"
}